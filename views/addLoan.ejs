<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add Loan</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    body {
      font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">Library App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarContent">
        <ul class="navbar-nav mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" href="/loans"><i class="fas fa-caret-left me-1"></i>Back to Loan</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt me-1"></i>Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <h2 class="text-center mb-4">Add Loan</h2>
    <form action="/addLoan" method="POST">
      <div class="mb-3">
        <label for="user_id" class="form-label">User</label>
        <select name="user_id" id="user_id" class="form-control" required>
          <% users.forEach(user => { %>
            <option value="<%= user.user_id %>"><%= user.username %></option>
          <% }) %>
        </select>
      </div>

      <div class="mb-3">
        <label for="availability_id" class="form-label">Book / Publisher</label>
        <select name="availability_id" id="availability_id" class="form-control" required>
            <% availability.forEach(item => { %>
                <option value="<%= item.availability_id %>">
                <%= item.book_title %> / <%= item.publisher_name %>
                </option>
            <% }) %>
        </select>
      </div>

      <div class="mb-3">
        <label for="loan_date" class="form-label">Loan Date</label>
        <input type="date" name="loan_date" class="form-control" required>
      </div>

      <div class="mb-3">
        <label for="return_date" class="form-label">Return Date</label>
        <input type="date" name="return_date" class="form-control">
      </div>

      <button type="submit" class="btn btn-primary">Add Loan</button>
    </form>
  </div>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Manage Availability</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    body {
      font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">Library App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarContent">
        <ul class="navbar-nav mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" href="/addAvailability"><i class="fas fa-plus me-1"></i>Add Available Book</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt me-1"></i>Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>


  <div class="container mt-4">
    <h2 class="text-center mb-4">Available Books</h2>
    <table class="table table-bordered text-center">
      <thead>
        <tr>
          <th>Book Cover</th>
          <th>Book Title</th>
          <th>Publisher</th>
          <th>Available Quantity</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% availability.forEach(row => { %>
          <tr>
            <td><img src="<%= row.image_url %>" alt="Cover" width="60" height="80" class="img-thumbnail"></td>
            <td><%= row.title %></td>
            <td><%= row.name %></td>
            <td><%= row.available_quantity %></td>
            <td>
              <a href="/updateAvailability/<%= row.availability_id %>" class="btn btn-outline-dark btn-sm">
                <i class="fas fa-edit"></i> Edit
              </a>
            </td>
            <td>
              <a href="/deleteAvailability/<%= row.availability_id %>" class="btn btn-outline-dark btn-sm" onclick="return confirm('Are you sure?')">
                <i class="fas fa-trash-alt"></i> Delete
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>

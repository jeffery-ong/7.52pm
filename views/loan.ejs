<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Loan Records</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    body {
      font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">Library App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarContent">
        <ul class="navbar-nav mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" href="/addLoan"><i class="fas fa-plus me-1"></i>Add Loan</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt me-1"></i>Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <h2 class="text-center">Loan Records</h2>
    <table class="table table-bordered text-center">
      <thead>
        <tr>
          <th>User</th>
          <th>Book</th>
          <th>Publisher</th>
          <th>Loan Date</th>
          <th>Due Date</th>
          <th>Return Date</th>
          <th>Status</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% loans.forEach(loan => { %>
          <tr>
            <td><%= loan.username %></td>
            <td><%= loan.title %></td>
            <td><%= loan.publisher %></td>
            <td><%= loan.loan_date ? loan.loan_date.toISOString().split('T')[0] : '' %></td>
            <td><%= loan.due_date ? loan.due_date.toISOString().split('T')[0] : '' %></td>
            <td><%= loan.return_date ? loan.return_date.toISOString().split('T')[0] : '' %></td>
            <td><%= loan.return_date ? 'Returned' : 'Borrowed' %></td>
            <td><a href="/updateLoan/<%= loan.loan_id %>" class="btn btn-outline-dark btn-sm">Edit</a></td>
            <td><a href="/deleteLoan/<%= loan.loan_id %> " class="btn btn-outline-dark btn-sm" onclick="return confirm('Are you sure?')">Delete</a></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
